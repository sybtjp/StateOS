#include <stm32f4_discovery.h>
#include <os.h>

OS_BOX(box, 1, sizeof(unsigned));

void slave()
{
	unsigned x;

	for (;;)
	{
		box_wait(box, &x);
		LEDs = x;
	}
}

void master()
{
	unsigned x = 1;

	for (;;)
	{
		tsk_delay(SEC);
		box_give(box, &x);
		x = (x << 1) | (x >> 3);
	}
}

OS_TSK(sla, 0, slave,  256);
OS_TSK(mas, 0, master, 256);

int main()
{
	LED_Init();

	tsk_start(sla);
	tsk_start(mas);
	tsk_stop();
}
