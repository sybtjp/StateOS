#include <stm32f4_discovery.h>
#include <os.h>

OS_MSG(msg, 1, sizeof(unsigned));

OS_TSK_DEF(sla, 0)
{
	unsigned x;

	for (;;)
	{
		msg_wait(msg, &x, sizeof(x));
		LEDs = x;
	}
}

OS_TSK_DEF(mas, 0)
{
	unsigned x = 1;

	for (;;)
	{
		tsk_delay(SEC);
		msg_give(msg, &x, sizeof(x));
		x = (x << 1) | (x >> 3);
	}
}

int main()
{
	LED_Init();

	tsk_start(sla);
	tsk_start(mas);
	tsk_sleep();
}
