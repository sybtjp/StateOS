#include <stm32f4_discovery.h>
#include <os.h>

evq_t evq = EVQ_INIT(1);

void slave()
{
	unsigned x;

	for (;;)
	{
		x = evq_wait(&evq);
		LEDs = x;
	}
}

void master()
{
	unsigned x = 1;

	for (;;)
	{
		tsk_delay(SEC);
		evq_give(&evq, x);
		x = (x << 1) | (x >> 3);
	}
}

tsk_t sla = TSK_INIT(0, slave,  256);
tsk_t mas = TSK_INIT(0, master, 256);

int main()
{
	LED_Init();

	tsk_start(&sla);
	tsk_start(&mas);
	tsk_stop();
}
